<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="mt-5 text-center">Editar Cadastro Alunos</h1>
            <form action="/alunos/editarAluno" method="post">
                <!-- no action vai a nossa rota e no método vai post - para que os dados sejam tratados e posteriormente inseridos dentro do banco-->
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" class="form-control" name="nome" placeholder="nome do aluno"
                        onblur="validaNome(this)" pattern="[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" required value="<%= resultado.nome%>">
                    <small id="erro_nome" class="text-danger"></small>
                </div>
                <div class="form-group">
                    <label for="valor_idade">Idade</label>
                    <input type="number" id="idade" class="form-control" name="idade" required value="<%= resultado.idade%>">
                </div>
                <div class="form-group">
                    <label for="turma">Turma</label>
                    <input type="text" id="turma" class="form-control" name="turma" required value="<%= resultado.turma%>">
                </div>
                <div class="form-group">
                    <label for="sala">Sala</label>
                    <input type="number" id="sala" class="form-control" name="sala" required value="<%= resultado.sala%>">
                </div>
                <div class="form-group">
                    <label for="contato">Contato Responsável</label>
                    <input type="number" id="contato" class="form-control" name="contato"
                        placeholder="contato do reponsável pelo aluno" required value="<%= resultado.contato%>">
                </div>

                <!-- vamos precisar informar o id para salvar no respectivo id, mas não queremos que esse campo apareça,  -->
                <input type="hidden" name="id" value="<%= resultado._id %>">
                <button class="btn btn-primary" type="submit">Salvar</button>
            </form>
        </div>
    </div>
</div>
 
<%- include("../partials/footer") %>