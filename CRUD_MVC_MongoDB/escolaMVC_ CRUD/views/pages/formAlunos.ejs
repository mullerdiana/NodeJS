<%- include('../partials/header'); %>
<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="mt-5 text-center">Cadastrar Alunos</h1>
            <form action="/alunos/cadastrarAlunos" method="post">
                <!-- no action vai a nossa rota e no método vai post - para que os dados sejam tratados e posteriormente inseridos dentro do banco-->
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" class="form-control" name="nome" placeholder="nome do aluno"
                        onblur="validaNome(this)" pattern="[A-Za-záàâãéèêíïóôõöúçñÁÀÂÃÉÈÍÏÓÔÕÖÚÇÑ ]+$" required>
                    <small id="erro_nome" class="text-danger"></small>
                </div>
                <div class="form-group">
                    <label for="valor_idade">Idade</label>
                    <input type="number" id="valor_idade" class="form-control" name="idade" required>
                </div>
                <div class="form-group">
                    <label for="turma">Turma</label>
                    <input type="text" id="turma" class="form-control" name="turma" required>
                </div>
                <div class="form-group">
                    <label for="sala">Sala</label>
                    <input type="number" id="sala" class="form-control" name="sala" required>
                </div>
                <div class="form-group">
                    <label for="contato">Contato Responsável</label>
                    <input type="number" id="contato" class="form-control" name="contato"
                        placeholder="contato do reponsável pelo aluno" required>
                </div>
                <button class="btn btn-primary" type="submit">Enviar</button>
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer'); %>